    <div class="card" style="width: 18rem;">
        @*<img src="..." class="card-img-top" alt="...">*@
        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(model => model.Name)</h5>
            <p class="card-text">
                <ul>
                    <li>Duration: @Html.DisplayFor(model => model.Duration) min.</li>
                    <li>Location: @Html.DisplayFor(model => model.Location)</li>
                    <li>Price: $@Html.DisplayFor(model => model.Price)</li>
                </ul>
