@model ReviewsSite.Models.Review

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label type="hidden" asp-for="HauntedHouseId" class="control-label"></label>
                <input type="hidden" asp-for="HauntedHouseId" class ="form-control" value="@ViewBag.HauntedHouseId" />
            </div>
            <div class="form-group">
                <label asp-for="Scareablity" class="control-label"></label>
                <input asp-for="Scareablity" class="form-control" />
                <span asp-validation-for="Scareablity" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Recommend" /> @Html.DisplayNameFor(model => model.Recommend)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="WouldReturn" /> @Html.DisplayNameFor(model => model.WouldReturn)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="StarRating" class="control-label"></label>
                @*<input asp-for="StarRating" class="form-control" />*@
                <span asp-validation-for="StarRating" class="text-danger"></span>

                <div class="rate">
                    <input class="star" type="radio" id="star5" name="rate" value=5 />
                    <label for="star5" title="text">5 stars</label>
                    <input class="star" type="radio" id="star4" name="rate" value=4 />
                    <label for="star4" title="text">4 stars</label>
                    <input class="star" type="radio" id="star3" name="rate" value=3 />
                    <label for="star3" title="text">3 stars</label>
                    <input class="star" type="radio" id="star2" name="rate" value=2 />
                    <label for="star2" title="text">2 stars</label>
                    <input class="star" type="radio" id="star1" name="rate" value=1 />
                    <label for="star1" title="text">1 star</label>
                    <script>
                        function assignStarRating() {
                            let starRatingElement = document.getElementById("starRating");
                            let stars = document.getElementsByClassName("star");
                            for (let i = 0; i < stars.length; i++) {
                                if (stars[i].checked) {
                                    starRatingElement.value = stars[i].value
                                    return;
                                }
                            }
                            starRatingElement.value = 3;
                        }
                    </script>
                    <input id="starRating" type="hidden" asp-for="StarRating" />

                </div>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input onclick="assignStarRating()" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
