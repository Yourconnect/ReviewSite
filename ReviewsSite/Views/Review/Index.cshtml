@model IEnumerable<ReviewsSite.Models.Review>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HauntedHouse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scareablity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recommend)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WouldReturn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StarRating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HauntedHouse.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Scareablity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recommend)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WouldReturn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StarRating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="DeleteReview" asp-route-id="@item.Id">Delete Review</a>
                
            </td>
        </tr>
}
    </tbody>
</table>
